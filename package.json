	"license": "GPL-3.0",
	"dependencies": {
		"@actions/core": "^1.9.1",
		"@actions/exec": "^1.1.1",
		"@actions/github": "^5.1.1",
		"yup": "^1.0.0-beta.7"
	},
	"engines": {
		"node": "^16.16.0"
	},
	"devDependencies": {
		"@types/node": "^18.11.18",
		"@typescript-eslint/parser": "^5.36.2",
		"@vercel/ncc": "^0.36.0",
		"eslint": "^8.31.0",
		"eslint-plugin-github": "^4.3.2",
		"eslint-plugin-jest": "^27.2.1",
		"jest": "^29.2.0",
		"js-yaml": "^4.1.0",
		"prettier": "^2.8.2",
		"ts-jest": "^29.0.5",
		"typescript": "^4.8.3"
	}
